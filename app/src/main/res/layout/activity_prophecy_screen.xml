<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools" android:layout_width="wrap_content"
    android:layout_height="wrap_content" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="gaming.wolfback.nonirim.View.ProphecyScreen"
    android:id="@+id/proph_screen">

    <ImageView
        android:id="@+id/proph_select_display_1"
        android:layout_width="50dp"
        android:layout_height="75dp"
        android:background="@drawable/backofcard"
        android:scaleType="fitXY"
        android:layout_marginLeft="36dp"
        android:layout_marginStart="36dp"
        android:layout_below="@+id/proph_display_1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="29dp" />

    <ImageView
        android:id="@+id/proph_select_display_2"
        android:layout_width="50dp"
        android:layout_height="75dp"
        android:background="@drawable/backofcard"
        android:scaleType="fitXY"
        android:layout_marginLeft="31dp"
        android:layout_marginStart="31dp"
        android:layout_alignTop="@+id/proph_select_display_1"
        android:layout_toRightOf="@+id/proph_select_display_1"
        android:layout_toEndOf="@+id/proph_select_display_1" />

    <ImageView
        android:id="@+id/proph_select_display_3"
        android:layout_width="50dp"
        android:layout_height="75dp"
        android:background="@drawable/backofcard"
        android:scaleType="fitXY"
        android:layout_marginLeft="34dp"
        android:layout_marginStart="34dp"
        android:layout_alignTop="@+id/proph_select_display_2"
        android:layout_toRightOf="@+id/proph_select_display_2"
        android:layout_toEndOf="@+id/proph_select_display_2" />

    <ImageView
        android:id="@+id/proph_select_display_4"
        android:layout_width="50dp"
        android:layout_height="75dp"
        android:background="@drawable/backofcard"
        android:scaleType="fitXY"
        android:layout_marginLeft="35dp"
        android:layout_marginStart="35dp"
        android:layout_alignTop="@+id/proph_select_display_3"
        android:layout_toRightOf="@+id/proph_select_display_3"
        android:layout_toEndOf="@+id/proph_select_display_3" />

    <ImageView
        android:id="@+id/proph_select_display_5"
        android:layout_width="50dp"
        android:layout_height="75dp"
        android:background="@drawable/backofcard"
        android:scaleType="fitXY"
        android:layout_marginLeft="33dp"
        android:layout_marginStart="33dp"
        android:layout_above="@+id/proph_option_1"
        android:layout_toRightOf="@+id/proph_select_display_4"
        android:layout_toEndOf="@+id/proph_select_display_4" />

    <TextView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:background="#7CFC00"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="1"
        android:id="@+id/proph_option_1"
        android:layout_below="@+id/proph_select_display_1"
        android:layout_toLeftOf="@+id/proph_select_display_2"
        android:layout_toStartOf="@+id/proph_select_display_2"
        android:layout_marginTop="28dp" />

    <TextView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:background="#78AB46"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="2"
        android:id="@+id/proph_option_2"
        android:layout_alignTop="@+id/proph_option_1"
        android:layout_alignLeft="@+id/proph_select_display_2"
        android:layout_alignStart="@+id/proph_select_display_2" />

    <TextView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:background="#ADD8E6"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="3"
        android:id="@+id/proph_option_3"
        android:layout_alignTop="@+id/proph_option_2"
        android:layout_alignLeft="@+id/proph_select_display_3"
        android:layout_alignStart="@+id/proph_select_display_3" />

    <TextView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:gravity="center"
        android:background="#7997A1"
        android:text="4"
        android:id="@+id/proph_option_4"
        android:layout_alignTop="@+id/proph_option_3"
        android:layout_alignLeft="@+id/proph_select_display_4"
        android:layout_alignStart="@+id/proph_select_display_4" />

    <TextView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:gravity="center"
        android:background="#FF0000"
        android:text="X"
        android:id="@+id/proph_option_x"
        android:layout_alignTop="@+id/proph_option_4"
        android:layout_alignLeft="@+id/proph_select_display_5"
        android:layout_alignStart="@+id/proph_select_display_5" />

    <TextView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:background="#E5E500"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="1"
        android:id="@+id/proph_display_1"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/proph_select_display_2"
        android:layout_toStartOf="@+id/proph_select_display_2" />

    <TextView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:background="#E5E500"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="2"
        android:id="@+id/proph_display_2"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/proph_select_display_2"
        android:layout_alignStart="@+id/proph_select_display_2" />

    <TextView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:background="#E5E500"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="3"
        android:id="@+id/proph_display_3"
        android:layout_above="@+id/proph_select_display_1"
        android:layout_alignLeft="@+id/proph_select_display_3"
        android:layout_alignStart="@+id/proph_select_display_3" />

    <TextView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:gravity="center"
        android:background="#E5E500"
        android:text="4"
        android:id="@+id/proph_display_4"
        android:layout_above="@+id/proph_select_display_1"
        android:layout_alignLeft="@+id/proph_select_display_4"
        android:layout_alignStart="@+id/proph_select_display_4" />

    <TextView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:gravity="center"
        android:background="#E5E500"
        android:text="X"
        android:id="@+id/proph_display_5"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/proph_select_display_5"
        android:layout_alignStart="@+id/proph_select_display_5" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Finished"
        android:id="@+id/proph_finished_button"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/proph_select_display_5"
        android:layout_alignBottom="@+id/proph_option_x"
        android:onClick="prophFinishAction"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Drag position number or kill (X) to card selection"
        android:id="@+id/proph_instructions"
        android:layout_below="@+id/proph_display_5"
        android:layout_alignLeft="@+id/proph_finished_button"
        android:layout_alignStart="@+id/proph_finished_button" />
</RelativeLayout>
