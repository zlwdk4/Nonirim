<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:background="@drawable/bg_shattered"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">



    <ImageButton
        android:layout_width="50dp"
        android:layout_height="75dp"
        android:id="@+id/hand0"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:scaleType="fitXY"
        android:background="@drawable/backofcard"/>

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="75dp"
        android:id="@+id/hand1"
        android:layout_alignBottom="@+id/hand0"
        android:layout_toRightOf="@+id/hand0"
        android:layout_toEndOf="@+id/hand0"
        android:scaleType="fitXY"
        android:background="@drawable/backofcard"/>

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="75dp"
        android:id="@+id/hand2"
        android:layout_alignBottom="@+id/hand1"
        android:layout_toRightOf="@+id/hand1"
        android:layout_toEndOf="@+id/hand1"
        android:scaleType="fitXY"
        android:background="@drawable/backofcard"/>

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="75dp"
        android:id="@+id/hand3"
        android:layout_alignBottom="@+id/hand2"
        android:layout_toRightOf="@+id/hand2"
        android:layout_toEndOf="@+id/hand2"
        android:scaleType="fitXY"
        android:background="@drawable/backofcard"/>

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="75dp"
        android:id="@+id/hand4"
        android:layout_alignBottom="@+id/hand3"
        android:layout_toRightOf="@+id/hand3"
        android:layout_toEndOf="@+id/hand3"
        android:scaleType="fitXY"
        android:background="@drawable/backofcard"/>

    <ImageView
        android:layout_width="90dp"
        android:layout_height="122dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/LabId0"
        android:background="#bbbbbb"
        android:layout_below="@+id/discardPileId"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="75dp"
        android:layout_height="102dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/LabId1"
        android:background="#c33333"
        android:layout_alignBottom="@+id/LabId0"
        android:layout_toRightOf="@+id/LabId0"
        android:layout_toEndOf="@+id/LabId0" />

    <ImageView
        android:layout_width="75dp"
        android:layout_height="102dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/LabId2"
        android:layout_marginLeft="-25dp"

        android:background="#bbbbbb"
        android:layout_alignTop="@+id/LabId1"
        android:layout_toRightOf="@+id/LabId1"
        android:layout_toEndOf="@+id/LabId1" />

    <ImageView
        android:layout_width="75dp"
        android:layout_height="102dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/LabId3"
        android:background="#c33333"
        android:layout_marginLeft="-25dp"
        android:layout_alignTop="@+id/LabId2"
        android:layout_toRightOf="@+id/LabId2"
        android:layout_toEndOf="@+id/LabId2" />
    <ImageView
        android:layout_width="75dp"
        android:layout_height="102dp"
        android:layout_marginLeft="-25dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/LabId4"
        android:background="#bbbbbb"
        android:layout_alignTop="@+id/LabId3"
        android:layout_toRightOf="@+id/LabId3"
        android:layout_toEndOf="@+id/LabId3" />
    <ImageView
        android:layout_width="75dp"
        android:layout_height="102dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_marginLeft="-25dp"
        android:id="@+id/LabId5"
        android:background="#c33333"
        android:layout_alignTop="@+id/LabId4"
        android:layout_toRightOf="@+id/LabId4"
        android:layout_toEndOf="@+id/LabId4" />
    <ImageView
        android:layout_width="75dp"
        android:layout_height="102dp"
        android:layout_marginLeft="-25dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/LabId6"
        android:layout_alignTop="@+id/LabId5"
        android:layout_toRightOf="@+id/LabId5"
        android:layout_toEndOf="@+id/LabId5" />


    <ImageView
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:src="@drawable/backofcard"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/Deck"
        android:layout_below="@+id/LabId0"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/discardPileId"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/Deck"
        android:layout_alignEnd="@+id/Deck" />
</RelativeLayout>
