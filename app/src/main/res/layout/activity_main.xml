<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/bg_shattered"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">



    <ImageButton
        android:layout_width="30dp"
        android:layout_height="45dp"
        android:id="@+id/hand0"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:scaleType="fitXY"
        android:background="@drawable/backofcard"/>

    <ImageButton
        android:layout_width="30dp"
        android:layout_height="45dp"
        android:id="@+id/hand1"
        android:layout_alignBottom="@+id/hand0"
        android:layout_toRightOf="@+id/hand0"
        android:layout_toEndOf="@+id/hand0"
        android:scaleType="fitXY"
        android:background="@drawable/backofcard"/>

    <ImageButton
        android:layout_width="30dp"
        android:layout_height="45dp"
        android:id="@+id/hand2"
        android:layout_alignBottom="@+id/hand1"
        android:layout_toRightOf="@+id/hand1"
        android:layout_toEndOf="@+id/hand1"
        android:scaleType="fitXY"
        android:background="@drawable/backofcard"/>

    <ImageButton
        android:layout_width="30dp"
        android:layout_height="45dp"
        android:id="@+id/hand3"
        android:layout_alignBottom="@+id/hand2"
        android:layout_toRightOf="@+id/hand2"
        android:layout_toEndOf="@+id/hand2"
        android:scaleType="fitXY"
        android:background="@drawable/backofcard"/>

    <ImageButton
        android:layout_width="30dp"
        android:layout_height="45dp"
        android:id="@+id/hand4"
        android:layout_alignBottom="@+id/hand3"
        android:layout_toRightOf="@+id/hand3"
        android:layout_toEndOf="@+id/hand3"
        android:scaleType="fitXY"
        android:background="@drawable/backofcard"/>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="45dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/LabId"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/hand0"
        android:layout_toEndOf="@+id/hand0"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Deck"
        android:id="@+id/Deck"
        android:layout_alignTop="@+id/hand4"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/discardPileId"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/Deck"
        android:layout_alignEnd="@+id/Deck" />
</RelativeLayout>
